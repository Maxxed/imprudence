<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater can_close="true" can_drag_on_left="false" can_minimize="true"
		can_resize="true" can_tear_off="false" enabled="true" height="200"
		min_height="150" min_width="425" mouse_opaque="true" name="preview floater"
		title="XUI Preview" width="435" bottom="200" left="200" >
	<panel follows="left|top|right" left="5" name="preview_panel" width="425"
			height="50" bottom="150" mouse_opaque="false">
		<line_editor bevel_style="in" border_style="line" border_thickness="1" bottom="0"
				enabled="true" follows="left" font="SansSerif" width="90"
				handle_edit_keys_directly="false" height="20" label="Chat channel"
				left="5" max_length="254" mouse_opaque="true" name="chat channel"
				select_all_on_focus_received="false" select_on_focus="false" 
				tool_tip="Enter the chat channel for sending the XUI actions." />
		<button bottom="0" follows="left" height="20" label="Send to chat" left="110"
				mouse_opaque="true" name="send to chat" tool_tip="Click her to toggle sending to the chat channel entered at left."
				width="100" toggle="true" />
		<button bottom="0" follows="right" height="20" label="Reload XML"
				left="-105" name="reload XML" mouse_opaque="true"
				tool_tip="Click here to reload the XML file for the floater."
				width="100" />
	</panel>
	<text_editor type="string" length="1" bg_readonly_color="ChatHistoryBgColor" bg_writeable_color="ChatHistoryBgColor"
			bottom="15" embedded_items="false" enabled="false"
			follows="left|top|right|bottom" font="SansSerif" top="-60" left="15"
			max_length="2147483647" mouse_opaque="true"
			name="XUI preview display" text_color="ChatHistoryTextColor"
			track_bottom="true" right="-15"
			text_readonly_color="ChatHistoryTextColor" word_wrap="true" />
</floater>
